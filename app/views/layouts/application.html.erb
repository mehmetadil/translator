  <body>
    <div class="row">
      <nav class="navbar navbar-default" style= "background-color: #24292e">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li><%= link_to "Tercüman", root_path, style: "color: rgba(255,255,255,0.75)"%></li>
              <li><%= link_to 'Makalelerim', myarticles_path, style: "color: rgba(255,255,255,0.75)" %></li>
              <li><%= link_to 'Tekliflerim', myoffers_path, style: "color: rgba(255,255,255,0.75)" %></li>
              <li><%= link_to "İlanlar", translate_orders_path, style: "color: rgba(255,255,255,0.75)" %></li>
              <li><%= link_to "Yeni Makale Ekle", new_article_path, style: "color: rgba(255,255,255,0.75" %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" style="color: rgba(255,255,255,0.75)"><li><%= user_signed_in? ? (image_tag current_user.profile.avatar.url, size: 25, style: "background-color: white")  : 'Misafir Kullanıcı'%> <span class="caret"></span></a>
