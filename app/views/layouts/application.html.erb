                  <% if user_signed_in?%>
                    <li><a href="#"><%= link_to "Profilim", profile_path(current_user.profile)%></a></li>
                    <li><a href="#"><%= link_to "Çıkış Yap", destroy_user_session_path, method: 'delete' %></a></li>
                  <% else%>
                    <li><a href="#"><%= link_to "Giriş Yap", new_user_session_path%></a></li>
                    <li><a href="#"><%= link_to "Kayıt Ol", new_user_registration_path%></a></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
    <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= yield %>
    </div>
    </div>
