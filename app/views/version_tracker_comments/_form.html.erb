<%= simple_form_for version_tracker.version_tracker_comments.build, url: version_tracker_comments_path, method: :post do |f| %>
  <%= f.input :content %> <br>
  <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id} %>
  <%= f.input :version_tracker_id, as: :hidden, input_html: {value: version_tracker.id} %>
  <%= f.button :submit, class: "btn btn-success" %> <br><br>  
<% end %>
  